{
  "name": "react-quick-start-stack",
  "version": "1.0.0",
  "author": "Nazim Lachter <nlachter@gmail.com>",
  "license": "Apache-2.0",
  "scripts": {
    "start": "webpack-dev-server --config=.webpack/dev.js",
    "build": "rm -f -r -d $BUILD_DIR/{images,js}/* && webpack -p --config=.webpack/prod.js",
    "test": "jest --coverage --config=.jest/config.json",
    "lint": "tslint './src/**/*.ts*' --format stylish --force && stylelint ./src/**/*.scss",
    "preversion": "git pull && (test $(git rev-parse --abbrev-ref HEAD) != master && echo '/!\\ YOU MUST CHECKOUT ON MASTER' && exit 1 || npm test)",
    "version:major": "npm version major -m 'Upgrade from ${npm_package_version} to %s'",
    "version:minor": "npm version minor -m 'Upgrade from ${npm_package_version} to %s'",
    "version:patch": "npm version patch -m 'Upgrade from ${npm_package_version} to %s'",
    "postversion": "git push --follow-tags"
  },
  "dependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "@types/jest": "^23.3.10",
    "@types/node": "^10.12.12",
    "@types/react": "^16.7.13",
    "@types/react-dom": "^16.0.11",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.4",
    "css-loader": "^2.1.0",
    "favicons-webpack-plugin": "^0.0.9",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "image-webpack-loader": "^4.6.0",
    "jest": "^23.6.0",
    "mobx": "^5.7.0",
    "mobx-react": "^5.4.2",
    "node-sass": "^4.10.0",
    "react": "^16.6.3",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^16.6.3",
    "react-hot-loader": "^4.3.12",
    "sass-loader": "^7.1.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.1",
    "stylelint": "^9.9.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-webpack-plugin": "^0.10.5",
    "tslint": "^5.11.0",
    "typescript": "^3.2.1",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.27.1",
    "webpack-cdn-plugin": "^2.3.3",
    "webpack-cli": "^3.1.2",
    "webpack-dev-middleware": "^3.4.0",
    "webpack-dev-server": "^3.1.10",
    "webpack-merge": "^4.1.4"
  }
}
